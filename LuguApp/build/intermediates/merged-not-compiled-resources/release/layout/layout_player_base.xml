<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.lamesa.lugu.player.library.MusicPlayer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00DDDDDD">

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/simpleExoPlayerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00DDDDDD"
        app:controller_layout_id="@layout/video_player_exo_controllers" />

    <include
        android:id="@+id/linearLayoutRetry"
        layout="@layout/layout_player_retry"
        android:visibility="gone" />

    <include
        android:id="@+id/linearLayoutLoading"
        layout="@layout/layout_player_loading"
        android:visibility="gone" />

</FrameLayout>