<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/fondo_blancoazul"
    android:orientation="vertical"
    tools:context="com.lamesa.lugu.activity.act_main">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:background="@color/fondo_blancoazul"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/poppins_bold"
                        android:text="LUGU"
                        android:textColor="@color/learn_colorPrimary"
                        android:textSize="24dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_version"
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins_bold"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/learn_gradient_grey_2"
                            android:textSize="8sp" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins_bold"
                            android:gravity="center|top"
                            android:text=" BETA"
                            android:textColor="@color/learn_gradient_grey_2"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />


                    <ImageView
                        android:id="@+id/ivLogo"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_above="@+id/rvDestacado"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:layout_toStartOf="@+id/ivMenu"
                        app:srcCompat="@mipmap/ic_launcher" />

                    <ImageView
                        android:id="@+id/ivMenu"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_above="@+id/rvDestacado"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        app:srcCompat="@drawable/ic_menu" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="0dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="10dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:orientation="vertical">

                        <com.lamesa.lugu.player.library.MusicPlayer
                            android:id="@+id/musicPlayer"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:andexo_aspect_ratio="aspect_mp3"
                            app:andexo_full_screen="false"
                            app:andexo_loop="finite"
                            app:andexo_play_when_ready="true"
                            app:andexo_resize_mode="Fit"
                            app:andexo_show_controller="true" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </FrameLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="235dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="0dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/flDestacados"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|top"
                    android:clickable="true"
                    android:clipToPadding="false"
                    android:foreground="?android:attr/selectableItemBackground">


                    <ImageView
                        android:id="@+id/iv_fondoGif"
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        android:background="@color/fondo_blancoazul"
                        android:scaleType="centerCrop" />

                    <com.github.matteobattilana.weather.WeatherView
                        android:id="@+id/weather_view"
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <ImageView
                        android:id="@+id/imgFondoDestacado12"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/shape_controller_bottom_gradient" />

                    <ImageView
                        android:id="@+id/imgFondoDestacado14"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/shape_controller_bottom_gradient"
                        android:visibility="gone" />


                    <ImageView
                        android:id="@+id/imgFondoDestacado11"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/shape_controller_bottom_gradient" />

                    <com.narayanacharya.waveview.WaveView
                        android:id="@+id/waveColor"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_gravity="bottom|center"
                        android:layout_marginBottom="5dp"
                        app:waveAmplitude="8.25"
                        app:waveBackgroundColor="#00000000"
                        app:waveColor="#FF5252"
                        app:waveDensity="3.0"
                        app:waveFrequency="2.0"
                        app:waveNumberOfWaves="4"
                        app:wavePhaseShift="-0.05"
                        app:wavePrimaryLineWidth="3.0"
                        app:waveSecondaryLineWidth="1.0"
                        app:waveXAxisPositionMultiplier="0.5" />

                    <com.narayanacharya.waveview.WaveView
                        android:id="@+id/waveBlack"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_gravity="bottom|center"
                        app:waveAmplitude="8.25"
                        app:waveBackgroundColor="#00000000"
                        app:waveColor="@color/fondo_blank"
                        app:waveDensity="3.0"
                        app:waveFrequency="2.0"
                        app:waveNumberOfWaves="2"
                        app:wavePhaseShift="-0.05"
                        app:wavePrimaryLineWidth="3.0"
                        app:waveSecondaryLineWidth="1.0"
                        app:waveXAxisPositionMultiplier="0.5" />

                    <ImageView
                        android:id="@+id/imgFondoDestacado8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/shape_controller_bottom_gradient" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="15dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_cancion"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="center"
                                android:maxLines="2"
                                android:text="For you, with love"
                                android:textColor="@color/learn_gradient_grey_1"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/iv_lupa"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center"
                                android:paddingLeft="5dp"
                                android:visibility="invisible"
                                app:srcCompat="@drawable/ic_lupa" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_artista"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="---"
                            android:textColor="@color/learn_gradient_grey_2"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_categoria"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="--"
                            android:textColor="#4BF7F8FA"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/pb_cargandoradio"
                        style="@android:style/Widget.Holo.Light.ProgressBar.Small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:indeterminate="true"
                        android:progressBackgroundTint="#00FFFFFF"
                        android:progressTint="#FF5252"
                        android:visibility="invisible" />

                    <com.github.ybq.android.spinkit.SpinKitView
                        android:id="@+id/spinBuffering"
                        style="@style/Wrap"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        android:padding="10dp"
                        android:visibility="gone"
                        app:SpinKit_Color="@color/learn_colorPrimary"
                        app:SpinKit_Style="MultiplePulseRing" />

                    <ImageView
                        android:id="@+id/iv_playPause"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        app:srcCompat="@drawable/ic_play" />

                    <ImageView
                        android:id="@+id/iv_likeDislike"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="bottom|right"
                        android:layout_margin="10dp"
                        app:srcCompat="@drawable/ic_dislike" />

                    <ImageView
                        android:id="@+id/iv_report"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="right|top"
                        android:layout_margin="10dp"
                        app:srcCompat="@drawable/ic_report" />

                    <ImageView
                        android:id="@+id/iv_support_art"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="right|left"
                        android:layout_margin="10dp"
                        app:srcCompat="@drawable/ic_imagen" />

                    <ImageView
                        android:id="@+id/iv_opcionBucle"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="bottom|right|left"
                        android:layout_margin="10dp"
                        app:srcCompat="@drawable/ic_aleatorio" />

                </FrameLayout>

            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_marginTop="5dp">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/contenidoHome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/bottomNavigation"
                android:layout_marginBottom="0dp"
                android:background="@drawable/shape_controller_bottom_gradient"
                android:fillViewport="true"
                android:overScrollMode="never"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/contenedor_categorias"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:foregroundGravity="top"
                            android:gravity="top"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="12dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginBottom="2dp"
                                    app:srcCompat="@drawable/ic_lista" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="@string/estilos"
                                    android:textColor="@color/learn_gradient_grey_1"
                                    android:textSize="22dp" />

                                <ImageView
                                    android:id="@+id/iv_style"
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginBottom="2dp"
                                    app:srcCompat="@drawable/ic_intercambiar_off" />

                                <Space
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1" />

                                <TextView
                                    android:id="@+id/tvVerEstrenos"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="12dp"
                                    android:layout_marginRight="12dp"
                                    android:layout_marginBottom="12dp"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="VER MAS"
                                    android:textColor="@color/learn_gradient_grey_2"
                                    android:textSize="12sp"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/tv_sleep"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="00:00:00"
                                    android:textColor="#63F0F0F5"
                                    android:textSize="14sp"
                                    android:visibility="gone" />

                                <ImageView
                                    android:id="@+id/iv_sleep"
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="12dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginBottom="2dp"
                                    app:srcCompat="@drawable/ic_moon_off" />

                            </LinearLayout>

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_categorias"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp"
                            android:clipToPadding="false"
                            android:overScrollMode="never"
                            android:paddingStart="@dimen/learn_spacing_standard_new"
                            android:paddingEnd="@dimen/learn_spacing_middle"
                            android:visibility="visible" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/contenedor_listas_custom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:foregroundGravity="top"
                            android:gravity="top"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="12dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginBottom="2dp"
                                    app:srcCompat="@drawable/ic_lista" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="@string/mis_listas"
                                    android:textColor="@color/learn_gradient_grey_1"
                                    android:textSize="22dp" />

                                <TextView
                                    android:id="@+id/tvVerEstrenos"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="12dp"
                                    android:layout_marginRight="12dp"
                                    android:layout_marginBottom="12dp"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="VER MAS"
                                    android:textColor="@color/learn_gradient_grey_2"
                                    android:textSize="12sp"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/tv_sleep"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="00:00:00"
                                    android:textColor="#63F0F0F5"
                                    android:textSize="14sp"
                                    android:visibility="gone" />

                                <ImageView
                                    android:id="@+id/iv_add_list"
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="12dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginBottom="2dp"
                                    app:srcCompat="@drawable/ic_add_list" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/contenedorMisListasVacio"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:visibility="visible">

                                <TextView
                                    android:id="@+id/tv_textMisListasVacio"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#03FFFFFF"
                                    android:fontFamily="@font/poppins_regular"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:text="Sin listas creadas"
                                    android:textColor="#52F7F8FA"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_mislistas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp"
                            android:clipToPadding="false"
                            android:overScrollMode="never"
                            android:paddingStart="@dimen/learn_spacing_standard_new"
                            android:paddingEnd="@dimen/learn_spacing_middle"
                            android:visibility="visible" />
                    </LinearLayout>


                    <com.google.android.material.bottomnavigation.BottomNavigationView
                        android:id="@+id/bottomNavigationHis_Fav"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_above="@+id/adViewMain"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center|top"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="0dp"
                        android:background="#00000000"
                        android:visibility="visible"
                        app:elevation="@dimen/learn_spacing_control"
                        app:itemIconSize="@dimen/_15sdp"
                        app:itemTextColor="@color/learn_colorPrimary"
                        app:labelVisibilityMode="unlabeled"
                        app:menu="@menu/learn_bottom_navigation_his_fav">

                    </com.google.android.material.bottomnavigation.BottomNavigationView>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_historial"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="visible">

                    </androidx.recyclerview.widget.RecyclerView>

                    <LinearLayout
                        android:id="@+id/contenedorVacio"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_imageVacio"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            app:srcCompat="@drawable/ic_vacio" />

                        <TextView
                            android:id="@+id/tv_textVacio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="@string/sin_recientes"
                            android:textColor="#52F7F8FA"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_favoritos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone" />

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <com.google.android.gms.ads.AdView
                android:id="@+id/adViewMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:layout_marginBottom="0dp"
                android:visibility="visible"
                app:adSize="BANNER"
                app:adUnitId="ca-app-pub-1553194436365145/3922025411">

            </com.google.android.gms.ads.AdView>

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottomNavigation"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_above="@+id/adViewMain"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:background="#00000000"
                android:visibility="gone"
                app:elevation="@dimen/learn_spacing_control"
                app:itemIconSize="@dimen/_15sdp"
                app:labelVisibilityMode="unlabeled"
                app:menu="@menu/learn_bottom_navigation">

            </com.google.android.material.bottomnavigation.BottomNavigationView>

        </RelativeLayout>
    </LinearLayout>

</FrameLayout>