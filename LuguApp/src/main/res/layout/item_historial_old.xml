<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cd_cancionHistorial"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="15dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/fondo_black3"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_controller_bottom_gradient">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="8dp"
            android:background="#00FFFFFF"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_cancion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:maxLines="2"
                        android:text="Seed on the imagination"
                        android:textColor="@color/learn_gradient_grey_1"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_artista"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:maxLines="1"
                        android:text="Luis GuzmÃ¡n"
                        android:textColor="@color/learn_gradient_grey_2"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivVisto"
                    android:layout_width="23dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/learn_ic_check_mark" />

                <TextView
                    android:id="@+id/tv_categoria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="right"
                    android:textColor="@color/learn_white_trans"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_option"
                    android:layout_width="23dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center|right"
                    android:visibility="visible"
                    app:srcCompat="@drawable/ic_option_item" />
            </LinearLayout>

        </FrameLayout>
    </FrameLayout>

</androidx.cardview.widget.CardView>