<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.lamesa.lugu.player.library.MusicPlayer">

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/simpleExoPlayerView"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:buffered_color="#A15F5F"
        app:controller_layout_id="@layout/video_player_exo_controllers"
        app:shutter_background_color="@color/fondo_blancoazul" />

    <include
        android:id="@+id/linearLayoutRetry"
        layout="@layout/layout_player_retry"
        android:visibility="gone" />

    <include
        android:id="@+id/linearLayoutLoading"
        layout="@layout/layout_player_loading"
        android:visibility="gone" />

</FrameLayout>